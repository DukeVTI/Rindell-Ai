# Rindell AI Configuration - MVP Version 2.0

# ═══════════════════════════════════════════════════════════
# SERVER CONFIGURATION
# ═══════════════════════════════════════════════════════════
API_PORT=3000
WEB_PORT=8080
NODE_ENV=development

# ═══════════════════════════════════════════════════════════
# DATABASE CONFIGURATION (PostgreSQL) - REQUIRED
# ═══════════════════════════════════════════════════════════
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rindell
DB_USER=rindell
DB_PASSWORD=your_database_password_here
DB_SSL=false

# ═══════════════════════════════════════════════════════════
# REDIS CONFIGURATION (Queue System) - REQUIRED
# ═══════════════════════════════════════════════════════════
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ═══════════════════════════════════════════════════════════
# SECURITY CONFIGURATION - REQUIRED FOR PRODUCTION
# ═══════════════════════════════════════════════════════════
JWT_SECRET=change-this-to-a-random-secret-in-production
JWT_EXPIRY=7d
BCRYPT_ROUNDS=10

# ═══════════════════════════════════════════════════════════
# GROQ AI CONFIGURATION (REQUIRED)
# ═══════════════════════════════════════════════════════════
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.3
AI_TIMEOUT=120000

# Alternative Groq Models:
# GROQ_MODEL=llama-3.1-8b-instant
# GROQ_MODEL=mixtral-8x7b-32768
# GROQ_MODEL=gemma-7b-it

# ═══════════════════════════════════════════════════════════
# WHATSAPP CONFIGURATION
# ═══════════════════════════════════════════════════════════
WHATSAPP_DATA_DIR=./user-data
SESSION_TIMEOUT=3600000
MAX_RECONNECT_ATTEMPTS=10

# ═══════════════════════════════════════════════════════════
# DOCUMENT PROCESSING CONFIGURATION
# ═══════════════════════════════════════════════════════════
MAX_FILE_SIZE=52428800
TEMP_DIR=./temp
PROCESSING_TIMEOUT=30000

# ═══════════════════════════════════════════════════════════
# CORS CONFIGURATION (Optional)
# ═══════════════════════════════════════════════════════════
CORS_ORIGIN=*

# ═══════════════════════════════════════════════════════════
# LEGACY CONFIGURATION (For backward compatibility)
# ═══════════════════════════════════════════════════════════
# These are kept for compatibility with old platform.js
API_SERVER_URL=http://localhost:3000/api
ASSISTANT_NUMBER=1234567890@c.us

